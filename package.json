{
  "name": "orderhub-express-api-",
  "version": "1.0.0",
  "description": "OrderHub is a scalable and secure RESTful API for managing customer orders. The system allows sellers to manage orders and update their status, while buyers can place and monitor their orders in real-time. Designed following Object-Oriented Programming principles. ",
  "main": "server.js",
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "lint": "eslint src --ext .ts --fix",
    "test:dev": "NODE_OPTIONS=--experimental-vm-modules npx jest --watchAll --runInBand",
    "build": "tsup src --out-dir build",
    "start": "node build/server.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/alfredo-petri/oop-rest-api-OrderHub"
  },
  "keywords": [
    "api",
    "rest",
    "express"
  ],
  "author": "Alfredo Augusto Petri",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/alfredo-petri/oop-rest-api-OrderHub/issues"
  },
  "homepage": "https://github.com/alfredo-petri/oop-rest-api-OrderHub?tab=readme-ov-file",
  "dependencies": {
    "@prisma/client": "^6.5.0",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.6",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "express-async-errors": "^3.1.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@rocketseat/eslint-config": "^2.2.2",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.13",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.14.12",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prisma": "^6.5.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.3.0",
    "tsx": "^4.16.2",
    "typescript": "^5.5.4"
  }
}
